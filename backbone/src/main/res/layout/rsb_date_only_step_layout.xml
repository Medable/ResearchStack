<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/dateOnlyQuestionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/reviewStepEditButtonBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Date Only" />

    <TextView
        android:id="@+id/dateOnlyStepQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#757575"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@id/reviewStepEditButtonBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateOnlyQuestionTitle"
        tools:text="When did you last drink a glass of water?" />

    <TextView
        android:id="@+id/dateOnlyStepQuestionAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#f7f8fa"
        android:padding="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateOnlyStepQuestion"
        tools:text="Water" />

    <include layout="@layout/rsb_review_step_edit_button_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>