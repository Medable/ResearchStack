<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_name_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rsb_margin_left"
        android:layout_marginRight="@dimen/rsb_margin_right"
        android:gravity="center_vertical"
        android:minHeight="@dimen/rsb_item_size_default"
        android:text="@string/rsb_name_first"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/value_name_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rsb_margin_left"
        android:layout_marginRight="@dimen/rsb_margin_right"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:minHeight="@dimen/rsb_item_size_default"
        android:singleLine="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        tools:text="John" />

    <TextView
        android:id="@+id/label_name_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rsb_margin_left"
        android:layout_marginRight="@dimen/rsb_margin_right"
        android:gravity="center_vertical"
        android:minHeight="@dimen/rsb_item_size_default"
        android:text="@string/rsb_name_last"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/value_name_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rsb_margin_left"
        android:layout_marginRight="@dimen/rsb_margin_right"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:minHeight="@dimen/rsb_item_size_default"
        android:singleLine="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        tools:text="Smith" />

</LinearLayout>
